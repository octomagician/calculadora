<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText

            android:id="@+id/resultado"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="numberDecimal"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="44dp" />

        <TextView
            android:id="@+id/AC"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:background="#E91E63"
            android:gravity="center"
            android:text="AC"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toStartOf="@+id/resultado"
            app:layout_constraintHorizontal_bias="0.823"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/four"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#808080"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/seven"
            tools:layout_editor_absoluteX="44dp" />

        <TextView
            android:id="@+id/one"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="#808080"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/four"
            tools:layout_editor_absoluteX="42dp" />

        <TextView
            android:id="@+id/seven"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="9dp"
            android:background="#808080"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toStartOf="@+id/eight"
            app:layout_constraintTop_toBottomOf="@+id/AC" />

        <TextView
            android:id="@+id/eight"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginEnd="12dp"
            android:background="#808080"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toStartOf="@+id/nine"
            tools:layout_editor_absoluteY="105dp" />

        <TextView
            android:id="@+id/entre"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/por"
            tools:layout_editor_absoluteX="253dp" />

        <TextView
            android:id="@+id/menos"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="253dp"
            tools:layout_editor_absoluteY="105dp" />

        <TextView
            android:id="@+id/two"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="#808080"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/five"
            tools:layout_editor_absoluteX="111dp" />

        <TextView
            android:id="@+id/six"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#808080"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/nine"
            tools:layout_editor_absoluteX="181dp" />

        <TextView
            android:id="@+id/five"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#808080"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/eight"
            tools:layout_editor_absoluteX="111dp" />

        <TextView
            android:id="@+id/three"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="#808080"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/six"
            tools:layout_editor_absoluteX="181dp" />

        <TextView
            android:id="@+id/zero"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#808080"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/two"
            tools:layout_editor_absoluteX="111dp" />

        <TextView
            android:id="@+id/por"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="x"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/mas"
            tools:layout_editor_absoluteX="253dp" />

        <TextView
            android:id="@+id/mas"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/menos"
            tools:layout_editor_absoluteX="253dp" />

        <TextView
            android:id="@+id/igual"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="="
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/three"
            tools:layout_editor_absoluteX="181dp" />

        <TextView
            android:id="@+id/nine"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:background="#808080"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toStartOf="@+id/menos"
            tools:layout_editor_absoluteY="105dp" />

        <TextView
            android:id="@+id/dot"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#808080"
            android:gravity="center"
            android:text="."
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/one"
            tools:layout_editor_absoluteX="42dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>